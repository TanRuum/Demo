@model IEnumerable<WebDemo1.Models.Khachhang>

@{
    ViewBag.Title = "Danh sách khách hàng";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container">
    <div class="col-md-12">
        <h4>Danh Sách Khách Hàng</h4>
        <hr />
        <a href="~/KhachHang/ThemMoi" class="btn btn-sm btn-success">Thêm mới</a>
    </div>

    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Tên Khách Hàng
                </th>
                <th>
                    Số Điện Thoại
                </th>
                <th>
                    Địa Chỉ
                </th>   
                <th>
                    Email
                </th>
                <th>
                    Giới Tính
                </th>
                <th>
                    Hình Ảnh
                </th>
               
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sex)
                    </td>
                    <td>
                        <img src="@item.UrlImg" style="height:70px;width:70px" />
                    </td>
                    <td>
                        <a href="~/Khachhang/Edit?IDKhachhang=@item.ID">Edit</a>|
                        <a onclick="XoaKhachHang(@item.ID)" href="#">Delete</a>

                    </td>
                </tr>
            }
        </table>
    </div>

</div>
@section Script{
    <script>
        var XoaKhachHang = function (IDKhachhang) {
            if (confirm("Bạn có muốn xóa không") == true) {
                location.href = "/KhachHang/Delete?IDKhachhang=" + IDKhachhang;
            }
        }
    </script>
}