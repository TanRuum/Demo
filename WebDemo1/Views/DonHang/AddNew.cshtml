@model WebDemo1.Models.DonHang

@{
    ViewBag.Title = "AddNew";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>AddNew</h2>

@using (Html.BeginForm("AddNew","DonHang",FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <Label class="control-label col-md-2">ID</Label>
            <div class="col-md-10">
                <input type="number" name="Id" value="" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <Label class="control-label col-md-2">Name</Label>
            <div class="col-md-10">
                <input type="text" name="Name" value="" class="form-control" />
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <Label class="control-label col-md-2">Phone Number</Label>
            <div class="col-md-10">
                <input type="text" name="PhoneNumber" value="" class="form-control" />
                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <Label class="control-label col-md-2">Address</Label>
            <div class="col-md-10">
                <input type="text" name="Address" value="" class="form-control" />
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <Label class="control-label col-md-2">Order Date</Label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.OrderDate, DateTime.Now.ToString("yyyy-MM-dd HH:mm"), new { @class = "form-control", type = "datetime-local" })
                @Html.ValidationMessageFor(model => model.OrderDate, "", new { @class = "text-danger" })


            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
