@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/Layout.cshtml";
    ViewBag.button = "Lien he";
    ViewBag.active = 5;


}
@model List<Demo3.Models.MayTinh>


<div>
    <h2>Danh sach sv</h2>
    <p>
        <a href="~/ContactUs/Sapxep">Giá thấp nhất</a> <br />
        <a href="~/ContactUs/SapxepLonNhat">Giá tăng dần</a> <br />
        <a href="~/ContactUs/SapxepLonNhat">Giá giảm dần</a>
    </p>
    <table class="table table-bordered">
        <thead>
            <tr style="font-size:25p;">
                <th>Mã máy</th>
                <th>Tên dòng máy</th>
                <th>Giá bán</th>
                <th>Ngày sản xuất</th>
                <th>Hãng sán xuất</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Mamay</td>
                    <td>@item.Tendongmay</td>
                    <td>@item.Price</td>
                    <td>@string.Format("{0:dd-MM-yyyy}",item.NSX)</td>
                    <td>@item.HangSX</td>
                </tr>
            }
        </tbody>
        
    </table>
</div>

